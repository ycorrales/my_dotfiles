# Recursively delete `.DS_Store` files
cleanup()
{
  local DIR=${1:-"./"}
  TRASH_FILE='0 .DS_Store'
  local f
  for f in ${TRASH_FILE[@]}; do
    plog "Removing all files $f"
    find $DIR -name $f -type f -ls -delete 2> /dev/null
  done
}

