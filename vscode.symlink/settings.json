{
  "window.restoreWindows": "none",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vs-minimal",
  "workbench.colorTheme": "Default Dark+",
  "workbench.activityBar.visible": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "workbench.colorCustomizations":
  {
    "[Default Dark+]": {
      "statusBar.noFolderBackground": "#dc7d3d",
      "statusBar.background": "#3d98dc"
    },
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f"
  },
  "git.confirmSync": false,
  //"workbench.statusBar.feedback.visible": false,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
//Remove trailing whitespace
  "files.trimTrailingWhitespace": true,

// Turn off autocomplete in Visual Studio Code
// http://code.visualstudio.com/

// Add the following lines to user settings

    // OPTIONAL WORD WRAPPING
    // Controls if lines should wrap. The lines will wrap at min(editor.wrappingColumn, viewportWidthInColumns).
    "editor.wordWrapColumn": 120,
    "editor.wordWrap": "bounded",
    // Controls the indentation of wrapped lines. Can be one of 'none', 'same' or 'indent'.
    "editor.wrappingIndent": "indent",

    // TURN OFF AUTOCOMPLETION
    // Controls if quick suggestions should show up or not while typing
    "editor.quickSuggestions": false,

    // Controls the delay in ms after which quick suggestions will show up
    "editor.quickSuggestionsDelay": 90,

    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": false,
    "editor.tabCompletion": "on",

    // Controls if the editor should automatically close brackets after opening them
    "editor.autoClosingBrackets": "never",

    // Controls if the editor should automatically format the line after typing
    "editor.formatOnType": false,

    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
      {
        "before": ["<leader>", "w"],
        "after": ["<Esc>", ":", "w", "enter"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<Space>"],
        "after": ["/"]
      },
      {
        "before": ["<leader>", "<enter>"],
        "commands": [":nohl"]
      },
      {
        "before": ["<leader>", "w"],
        "commands": [":w"]
      }
    ],
    "vim.leader": "\\",
    "vim.handleKeys": {
      "<C-a>": false,
 //     "<C-f>": false
    },

    "C_Cpp.clang_format_fallbackStyle":
      "{ BasedOnStyle: WebKit, ColumnLimit: 120, IndentWidth: 2, PointerAlignment: Left}",
    "C_Cpp.intelliSenseCachePath": "${env:HOME}/.vscode",
    "C_Cpp.intelliSenseCacheSize": 1024,
    "files.associations": {
      "*.C": "cpp"
  },
  "team.showWelcomeMessage": false,
  "C_Cpp.updateChannel": "Insiders",
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.vimrc",
  "update.mode": "manual",
  "python.pythonPath": "/usr/bin/python3",
  "python.showStartPage": false
  }
